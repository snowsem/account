      <h4><%= current_user_full_name%></h4>

      <table class="table table-condensed small table-bordered table-hover" >
        <thead>
        <tr>
          <th>ID</th>
          <th>Фамилия</th>
          <th>Имя</th>
          <th>Отчество</th>
          <th>Логин/e-mail</th>
          <th>Телефон</th>
          <th>Город</th>
        </tr>
        </thead>
        <tbody>
        <% @clients.each do |client|%>


        <tr>
          <td><%= client.id %></td>
          <td><%= client.family %></td>
          <td><%= client.name %></td>
          <td><%= client.surename %></td>
          <td><%= client.email %></td>
          <td></td>
          <td><%= client.email %></td>
        </tr>
        <%end%>


        </tbody>
      </table>
