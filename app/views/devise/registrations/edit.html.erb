<% provide(:page_title, 'Редактировать профиль') %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>Редактровать профиль</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :email %><br/>
            <%= f.email_field :email, class: 'form-control', autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :Фамилия %><br/>
            <%= f.text_field :family, class: 'form-control', autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :Имя %><br/>
            <%= f.text_field :name, class: 'form-control', autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :Отчество %><br/>
            <%= f.text_field :surename, class: 'form-control', autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :Телефон %><br/>
            <%= f.text_field :telephone, class: 'form-control', :id => 'phone', autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :Компания %><br/>
            <%= f.text_field :company, class: 'form-control', autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :Адрес %><br/>
            <%= f.text_area :address, class: 'form-control', autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :"Действующий пароль"%> <i>(Введите пароль для изменений)</i><br/>
            <%= f.password_field :current_password, class: 'form-control', autocomplete: "off" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <br>

          <div class="actions">
            <%= f.submit "Обновить информацию", :class => "btn btn-primary" %>
          </div>
          <br>
          <br>
          <h3>Изменить пароль</h3>
          <div class="field">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br/>
            <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
            <% if @minimum_password_length %>
                <br/>
                <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br/>
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
          </div>

          <br>

          <div class="actions">
            <%= f.submit "Обновить информацию", :class => "btn btn-primary" %>
          </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>